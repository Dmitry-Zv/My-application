<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffee_background">

    <Button
        android:id="@+id/add_sort_button"
        android:text="@string/add_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/coffee_list_button"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/coffee_list_button"
        android:text="@string/coffee_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_sort_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>