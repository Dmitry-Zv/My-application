<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.MyApplication.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/home_widget"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_baseline_home_24"
        android:layout_below="@+id/icon_image"
        />

    <ImageView
        android:id="@+id/update_widget"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_baseline_update_24"
        android:layout_below="@+id/icon_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/appwidget_text"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_text"
        android:layout_margin="8dp"
        tools:text = "temp"
        android:textSize="20sp"
        android:layout_toEndOf="@id/icon_image"
        android:layout_toRightOf="@id/icon_image" />
    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperature"
        android:layout_margin="8dp"
        tools:text = "humidity"
        android:textSize="20sp"
        android:layout_toEndOf="@id/icon_image"
        android:layout_toRightOf="@id/icon_image" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity"
        android:layout_margin="8dp"
        tools:text = "pressure"
        android:textSize="20sp"
        android:layout_toEndOf="@id/icon_image"
        android:layout_toRightOf="@id/icon_image" />

</RelativeLayout>