<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffee_bg">


    <ImageView
        android:id="@+id/coffee_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/coffee_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/coffee_image_view"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/coffee_image_view"
        android:layout_toRightOf="@id/coffee_image_view"
        android:textColor="#6F0781"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/coffee_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/coffee_image_view"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@id/coffee_image_view"
        android:layout_toRightOf="@id/coffee_image_view"
        android:textColor="#6F0781"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/coffee_image_view2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/coffee_name_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/coffee_image_view2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/coffee_image_view2"
        android:layout_toRightOf="@id/coffee_image_view2"
        android:textColor="#6F0781"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/coffee_cost_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/coffee_image_view2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@id/coffee_image_view2"
        android:layout_toRightOf="@id/coffee_image_view2"
        android:textColor="#6F0781"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/coffee_image_view3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/coffee_name_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/coffee_image_view3"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/coffee_image_view3"
        android:layout_toRightOf="@id/coffee_image_view3"
        android:textColor="#6F0781"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/coffee_cost_text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/coffee_image_view3"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@id/coffee_image_view3"
        android:layout_toRightOf="@id/coffee_image_view3"
        android:textColor="#6F0781"
        android:textSize="20sp" />

</RelativeLayout>